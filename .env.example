# System Settings
PUID=1000
PGID=1000
TZ=Europe/Berlin

# Directory Paths - Following Trash-Guides recommendations
# Your data directory should have this structure:
# data/
# ├── torrents/
# │   ├── movies/
# │   └── tv/
# ├── usenet/
# │   ├── incomplete/
# │   └── complete/
# │       ├── movies/
# │       └── tv/
# └── media/
#     ├── movies/
#     └── tv/
CONFIG_DIR=/media/arr/appdata
DATA_DIR=/media/arr/data

# Network Settings
LOCAL_SUBNET=10.0.20.0/24

# VPN Settings (Gluetun)
VPN_SERVICE_PROVIDER=your_vpn_provider
VPN_TYPE=wireguard
# For OpenVPN (if using openvpn instead of wireguard)
VPN_USER=your_vpn_username
VPN_PASSWORD=your_vpn_password
# For WireGuard (if using wireguard instead of openvpn)
# NOTE: Store the actual private key in ./secrets/wireguard_private_key.txt (not in .env)
WIREGUARD_ADDRESSES=your_vpn_addresses
VPN_SERVER_COUNTRIES=your_vpn_server_countries
VPN_SERVER_CITIES=your_vpn_server_cities (optional)

# Port Mappings
QBITTORRENT_PORT=8080
QBITTORRENT_WEBUI_PORT=8081
RADARR_PORT=7878
SONARR_PORT=8989
PROWLARR_PORT=9696
JACKETT_PORT=9117
JELLYSEERR_PORT=5055
UNPACKERR_PORT=5656
WATCHSTATE_PORT=8090
FLARESOLVERR_PORT=8191
JELLYFIN_PORT=8096
JELLYFIN_HTTPS_PORT=8920
SABNZBD_PORT=8080

# API Keys
# NOTE: Store actual API keys in ./secrets/ directory files (not in .env):
# - ./secrets/sonarr_api_key.txt - Sonarr API key
# - ./secrets/radarr_api_key.txt - Radarr API key

# Jellyfin Settings
JELLYFIN_PUBLISHED_URL=your_jellyfin_ip:${JELLYFIN_PORT}

# Swaparr Settings
SWAPARR_INTERVAL=3600

# FlareSolverr Settings
LOG_LEVEL=info
LOG_HTML=false
CAPTCHA_SOLVER=none
